#!/bin/bash
ARGS=$(getopt -o  hu:p: -l help,user:,pass: -- "$@")
eval set -- $ARGS
while [ $# -gt 0 ]
do
	case "$1" in
		-h|--help)
			SHOW_HELP=yes
			shift
			;;
		-u|--user)
			USERNAME="$2"
			shift 2
			;;
		-p|--pass)
			PASSWORD="$2"
			shift 2
			;;
		--)
			shift
			break
			;;
	esac
done

if [ -z "$SHOW_HELP" -a -z "$0"  ]
then
	SHOW_HELP='yes'
	echo 'Please specify the path to a PKGBUILD file' >&2
	echo >&2
fi

if [ "$SHOW_HELP" = 'yes' ]
then
	cat '/usr/share/gitaur/help/gitaur-deploy'
else
	PKGBUILD="$(realpath "$1" 2>/dev/null || realpath 'PKGBUILD')"
	if [ ! -f "$PKGBUILD" ]
	then
		echo 'Please specify a valid path to a PKGBUILD file' >&2
		exit 1
	fi

	TMP="$(mktemp -d)"

	gitaur-pkgbuild "$PKGBUILD" > "$TMP/PKGBUILD"

	cd "$TMP"
	ERRORS=$(namcap 'PKGBUILD')
	if [ -n "$ERRORS" ]
	then
		echo $ERRORS
		exit 1
	else
		mkaurball
		if [ -n "$USERNAME" ]
		then
			burp -u "$USERNAME" -p "$PASSWORD" *.src.tar.gz
		else
			burp *.src.tar.gz
		fi
		rm -rf "$TMP"
	fi
fi
